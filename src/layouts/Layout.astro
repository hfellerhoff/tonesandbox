---
import { Icon } from 'astro-icon';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-gray-200 min-h-screen'>
    <header class='bg-white rounded shadow absolute top-4 left-4'>
      <a
        class='px-4 py-2 flex items-center justify-center gap-2 rounded border-transparent hover:border-purple-600 border-2 transition-all'
        href='/'
      >
        <Icon pack='lucide' name='shovel' /><h1 class=''>Tone Sandbox</h1>
      </a>
    </header>
    <slot />
    <style lang='css'>
      [astro-icon] {
        height: 1rem;
        width: 1rem;
      }
    </style>
  </body>
</html>
