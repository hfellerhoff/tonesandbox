---
import NavigationCard from "../components/NavigationCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tone Sandbox">
  <main class="mt-16 p-4">
    <ul class="grid gap-4 grid-cols-[repeat(auto-fill,_minmax(300px,_1fr))]">
      <NavigationCard
        title="Piano"
        body="Plug in a MIDI-enabled keyboard and play piano"
        href="/piano"
        icon="piano-keys"
      />
      <NavigationCard
        title="FFT"
        body="View the frequencies from your connected microphone"
        href="/fft"
        icon="perspective"
      />
      <NavigationCard
        title="Sequencer"
        body="Create MIDI progressions and looping melodies"
        href="/sequencer"
        icon="piano-keys"
      />
    </ul>
  </main>
</Layout>
