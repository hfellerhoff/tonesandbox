---
import Layout from "@layouts/Layout.astro";
import TheraminApp from "@features/theramin";
import AudioFeatureWrapper from "@components/AudioFeatureWrapper";
---

<head>
    <script
        src="https://cdn.jsdelivr.net/npm/handtrackjs@latest/dist/handtrack.min.js"
    ></script>
</head>
<Layout
    title="Theramin"
    description="A theramin emulator controlled using your computer webcam and hand movements."
>
    <main
        class="flex flex-col items-center justify-center h-screen w-full overflow-hidden"
    >
        <AudioFeatureWrapper client:load>
            <TheraminApp client:only="solid-js" />
        </AudioFeatureWrapper>
    </main>
</Layout>
