{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@solid/*": ["src/frameworks/solid/*"],
      "@svelte/*": ["src/frameworks/svelte/*"],
      "@preact/*": ["src/frameworks/preact/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
